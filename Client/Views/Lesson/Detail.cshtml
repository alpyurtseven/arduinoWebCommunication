@model Data.Models.Lesson
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sınavlar</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kullanıcı Numarası</th>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kullanıcı Numarası</th>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Detay</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var item in Model.Exams) {
                    <tr>
                        <td>@item.ExamName</td>
                    </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Öğrenciler</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kullanıcı Numarası</th>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kullanıcı Numarası</th>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Detay</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>-@item.Surname</td>
                        </tr>
                    }
                   
                </tbody>
            </table>
        </div>
    </div>
</div>


