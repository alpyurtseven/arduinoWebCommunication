@model Data.Models.Exam
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--TODO sınav adı ders adı öğrenciler sorular gösterilecek-->
<div class="top-info row">
    <div class="col-md-3 sol-sm-12">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Sınav Adı: @Model.ExamName
                        </div>
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Ders AdI: @Model.Lesson.LessonName
                        </div>
                        
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-12 offset-md-6 d-md-flex justify-content-end" style="height:50px">
        <a href="~/exam/edit/@Model.ExamId" class="btn btn-light btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-right"></i>
            </span>
            <span class="text">Sınavı Düzenle</span>
        </a>
    </div>

</div>
<section class="ftco-section">

    <div class="">
        <div class="row">
            <div class="col-md-12">
                <div class="featured-carousel owl-carousel">
                     @foreach (var question in Model.Questions)
                     {
                         <div class="item">
                             <div class="blog-entry">
                                 <div class="text border border-top-0 p-4">
                                     <h3 class="heading"><a href="#">@question.QuestionContent</a></h3>
                                     <p>@question.Answer</p>

                                 </div>
                             </div>
                         </div>
                     }
                </div>
            </div>
        </div>
        <br />
        <br />
        @*<ol class="list-group list-group-numbered" style="overflow-y:scroll;height:300px">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Öğrenci Listesi</div>
                    <br>
                    @foreach (var student in Model.Lesson.Users)
                    {
                        <p>@student.Name</p>
                    }
                </div>

            </li>


        </ol>*@
    </div>

</section>

