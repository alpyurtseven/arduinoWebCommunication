<script>

    $(document).ready(() => {
        $('.user-info').text(sessionStorage.UserName + ' ' + sessionStorage.UserSurname);
        sessionStorage.UserTpe === 'false' && $('.create-exam').remove();

        var sendHttpRequest = (method, url) => {
            var promise = new Promise((resolve, reject) => {
                var xhr = new XMLHttpRequest();

                xhr.open(method, url);

                xhr.onload = () => {
                    resolve(xhr.response);
                };

                xhr.send();
            });

            return promise;
        };

        window.onload = function() {
                sendHttpRequest('GET', '/lesson/index').then((responseData) => { $('#collapseTwo .collapse-inner')[0].innerHTML += responseData })
        }

        window.onload()
    })
</script>